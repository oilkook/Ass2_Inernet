          <% Object.values(errors).forEach(function (error) { %>
            <li><%= error.msg %></li>
            <% }) %>
      </ul>
      <% } %>
      <form class="" action="" method="post">
          <div class="from-group">
            <label for="">ชื่อ-นามสกุล</label> 
            <input type="text" name="name" value="" class="form-control">
          </div>
          <div class="from-group">
            <label for="">วัคซีนเข็มที่เท่าไหร่</label>
            <input type="text" name="num_vaccine" value="" class="form-control">
          </div>
          <div class="from-group">
            <label for="">ประเภทวัคซีน</label>
            <input type="text" name="name_vaccine" value="" class="form-control">
          </div>
          
            <input type="submit" name="" value="บันทึก" class="btn btn-primary">

      </form>
    </div>
    <script>
        $(function(){
            $('#messages').addClass('alert alert-success');
        })
        CKEDITOR.replace( 'description' );
    </script>
    
  </body>
</html>